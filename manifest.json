{
  "manifest_version": 3,
  "name": "VidSrc Link Adder",
  "version": "1.0",
  "action": {
    "default_icon": "letterwatch.png"
  },
  "description": "Adds a link to VidSrc on Letterboxd movie pages",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://letterboxd.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://letterboxd.com/film/*"],
      "js": ["content.js"]
    }
  ]
}